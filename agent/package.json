{
    "name": "deskshare-launcher",
    "version": "1.0.0",
    "description": "DeskShare Launcher Agent - Zero-Config Remote Access",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win --x64"
    },
    "author": "DeskShare",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.6.0",
        "open": "^9.1.0",
        "sudo-prompt": "^9.2.1"
    },
    "optionalDependencies": {
        "wrtc": "^0.4.7",
        "robotjs": "^0.6.0",
        "screenshot-desktop": "^1.12.7"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-packager": "^17.1.2"
    },
    "build": {
        "appId": "com.deskshare.launcher",
        "productName": "DeskShare Launcher",
        "win": {
            "target": "portable",
            "icon": "assets/icon.ico",
            "verifyUpdateCodeSignature": false,
            "sign": null
        },
        "portable": {
            "artifactName": "DeskShareSetup.exe",
            "requestExecutionLevel": "admin"
        },
        "protocols": [
            {
                "name": "DeskShare Protocol",
                "schemes": [
                    "deskshare"
                ]
            }
        ],
        "files": [
            "**/*",
            "!dist"
        ],
        "extraResources": [
            {
                "from": "bin",
                "to": "bin",
                "filter": [
                    "**/*"
                ]
            }
        ]
    }
}