{
  "name": "deskshare-agent-v1",
  "productName": "DeskShare",
  "version": "1.0.0",
  "description": "DeskShare Remote Agent",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -w nsis portable"
  },
  "build": {
    "appId": "com.deskshare.agent",
    "productName": "DeskShare",
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "src/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "keywords": [],
  "author": "DeskShare",
  "license": "ISC",
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "axios": "^1.13.3"
  }
}
